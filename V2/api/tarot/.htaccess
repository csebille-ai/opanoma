Options -MultiViews
RewriteEngine On

# Laisse passer les fichiers/dossiers r√©els (ex: summarize.js)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route explicitement les 3 sous-apps
RewriteRule ^summarize/?$ summarize/index.php [L,QSA]
RewriteRule ^track/?$     track/index.php     [L,QSA]
RewriteRule ^admin/?$     admin/index.php     [L,QSA]

